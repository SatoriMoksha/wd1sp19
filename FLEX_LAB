  flex-wrap: wrap; /*wrap|wrap-reverse|nowrap;*/
  align-items: center; /*stretch | flex-start | flex-end | center | baseline;*/
  align-content: stretch; /*flex-start | flex-end | center | space-between | space-around | stretch;*/
  justify-content: space-evenly; /*flex-start(default)\end|space-between\around\evenly|center;*/
